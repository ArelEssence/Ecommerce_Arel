<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="bt_stylex" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/merah</item>
        <item name="android:background">@drawable/bg_button_login</item>
    </style>

    <style name="bt_stylex_1" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/merah</item>
        <item name="android:background">@drawable/bg_button_signup</item>
    </style>

    <style name="bt_warna" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#F49DBB</item>
        <item name="android:background">@drawable/bg_button_warna_pink</item>
    </style>

</resources>